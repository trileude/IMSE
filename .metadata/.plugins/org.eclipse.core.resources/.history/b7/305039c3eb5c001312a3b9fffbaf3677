package transformation;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.InputStream;
import java.io.InputStreamReader;
import transformation.Transformation;

public class Doigts {

	public static void main(String[] args) {
		String chaineFichierQuestion = "";
		String chaineFichierUI = "";
		try
		{
			InputStream ips = new FileInputStream("fichierQuestion.q"); 
			InputStreamReader ipsr = new InputStreamReader(ips);
			BufferedReader br = new BufferedReader(ipsr);
			String ligne;
			while ((ligne=br.readLine())!=null){
				System.out.println(ligne);
				chaineFichierQuestion+=ligne+"\n";
			}
			br.close(); 
		}		
		catch (Exception e){
			System.out.println(e.toString());
			System.out.println("Fichier question non trouvé !");
		}
		
		try
		{
			InputStream ips = new FileInputStream("fichierUI.ui"); 
			InputStreamReader ipsr = new InputStreamReader(ips);
			BufferedReader br = new BufferedReader(ipsr);
			String ligne;
			while ((ligne=br.readLine())!=null){
				System.out.println(ligne);
				chaineFichierUI+=ligne+"\n";
			}
			br.close(); 
		}		
		catch (Exception e){
			System.out.println(e.toString());
			System.out.println("Fichier UI non trouvé !");
		}
		
		Transformation transformer = new Transformation(); 
	}

}
